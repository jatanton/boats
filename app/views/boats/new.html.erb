<h3 class='text-center'> Adding New boat</h3>

<div class='row'>

  <div class='col-md-12'>

    <%= form_for(@boat, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :manufacturer, class: 'form-control', placeholder: 'Manufacturer', autofocus: true %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :model, class: 'form-control', placeholder: 'Model' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :price, class: 'form-control', placeholder: 'Price' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :lwl, class: 'form-control', placeholder: 'LWL' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :beam, class: 'form-control', placeholder: 'Beam' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :displacement, class: 'form-control', placeholder: 'Light Displacement' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-11'>

            <%= f.text_field :ballast, class: 'form-control', placeholder: 'Ballast' %>

          </div>

        </div>

        <div class='form-group'>

          <div class='col-md-offset-1 col-md-11'>

            <%= f.submit class: 'btn btn-primary btn-lg' %>

          </div>

        </div>

    <% end %>

  </div>

</div>