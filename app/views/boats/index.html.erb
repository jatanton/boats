<h1>Create Boat</h1>
<%=  link_to 'Create Boat', new_boat_path, class: "btn btn-default btn-lg", id: "new-boat-btn" %>

<div class="container">
  <h2>Boats Listing</h2>
  <p>This is a listing of boats</p>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Manufacturer</th>
        <th>Model</th>
        <th>Price</th>
        <th>LWL</th>
        <th>Beam</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @boats.each do |boat| %>
        <tr>
          <td><%= boat.manufacturer %></td>
          <td><%= link_to boat.model,  boat_path(boat)%></td>
          <td><%= boat.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>